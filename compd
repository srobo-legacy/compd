import gobject, glib, sys, os
import client, socket
COMPD_SOCKET = "/tmp/compd"
COMPD_PORT = 7600

# Augment the import path with our own
sys.path.append( os.path.dirname( os.path.abspath(__file__) ) )

from vartree import PubSubDict

if __name__ == "__main__":
    root = PubSubDict( desc = "Root of the tree" )
    # TODO: Load backed-up variable tree from database

    loop = gobject.MainLoop()
    main_context = loop.get_context()

    client.CompdServer(root, socket.AF_UNIX, COMPD_SOCKET)
    client.CompdServer(root, socket.AF_INET, ("", COMPD_PORT) )

    loop.run()
